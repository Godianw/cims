    <div id="loading" class="loading">Loading pages...</div>

    <script type="text/javascript">

        <!-- 页面加载时更新导航栏 -->
        window.onload = function () {

            jQuery('#loading').hide();

            var session = '<%=Session["username"] %>';
            document.getElementById('usrlab').innerText = "欢迎您," + session;

            var usrlab = document.getElementById('usrlab').innerText;
            if (usrlab == "欢迎您,")
            {
                $("#usrli").hide();
                $("#logoutDialogBtn").hide();
                $('#userManageBtn').hide();
                $('#suggestionBtn').hide();
                $('#suggestionReplyBtn').hide();
                $("#CPH1_uploadFileDiv").hide();
                $("#registerDialogBtn").show();
                $("#loginDialogBtn").show();

                if (window.location.pathname == "/UserManage.aspx" || window.location.pathname == "/Reply.aspx")
                    window.location.href = "HomePage.aspx";
            }
            else
            {
                $("#usrli").show();
                $("#logoutDialogBtn").show();
                $('#suggestionBtn').show();
                $("#CPH1_uploadFileDiv").hide();
                $('#userManageBtn').hide();
                $('#suggestionReplyBtn').hide();
                $("#registerDialogBtn").hide();
                $("#loginDialogBtn").hide();

                if (usrlab == "欢迎您,admin")  // 管理员登录时显示管理账户模块
                {
                    $('#suggestionBtn').hide();
                    $('#userManageBtn').show();
                    $('#suggestionReplyBtn').show();
                    $("#CPH1_uploadFileDiv").show();
                }
            }

            onload2();
        };

        // enter事件
        function keyLogin() {
            if (event.keyCode == "13") {//keyCode=13是回车键
                if (jQuery('#login').is(':visible'))
                    Login();
            }
        };

        // 登录
        function Login(){

            var username = document.getElementById("loginPhone").value;
            var password = document.getElementById("loginPassword").value;

            if (username == "" || password == "")
            {
                alert('用户名或密码不能为空');
                return;
            }

            $.ajax({
                type: 'POST',
                url: 'WebService.aspx',
                async: true,
                data: {
                    log_username: username,
                    log_password: password
                },
                beforeSend: function () {
                    // 禁用按钮防止重复提交
                    $('#loading').show();
                    $("#loginBtn").attr({ disabled: "disabled" });  
                },
                success: function (data) {
                    if (data == '-1')
                        alert('用户名或密码错误！');
                    else {
                    //    alert('登录成功');
                        $('#login').modal('hide');
                        $('#suggestionBtn').show();
                        $("#usrli").show();
                        $("#logoutDialogBtn").show();
                        $("#registerDialogBtn").hide();
                        $("#loginDialogBtn").hide();

                        if (data == "admin") // 用户为管理员
                        {
                            $('#suggestionBtn').hide();
                            $('#userManageReplyBtn').show();
                            $("#CPH1_uploadFileDiv").show();
                        }
                        
                        document.getElementById('usrlab').innerText = "欢迎您," + data;                     
                    }   
                },
                error: function () {
                    alert('登录失败!');
                },
                complete: function () {
                    $('#loading').hide();
                    $("#loginBtn").removeAttr("disabled");

                    // 清空表单
                    document.getElementById("loginPhone").value = "";
                    document.getElementById("loginPassword").value = "";
                }
            });
        };

        // 获取验证码
        function getCode() {
            alert("发送短信内容“ZCZH”到18818429870以获取验证码");
        }

        // 注销
        function Logout() {

            $.ajax({
                type: 'POST',
                url: 'WebService.aspx',
                async: true,
                data: {
                    state: "register"
                },
                beforeSend: function () {
                    
                },
                success: function () {

                    $("#usrli").hide();
                    $("#logoutDialogBtn").hide();
                    $('#userManageBtn').hide();
                    $('#suggestionBtn').hide();
                    $("#registerDialogBtn").show();
                    $("#loginDialogBtn").show();

                    document.getElementById('usrlab').innerText = "欢迎您,";
                    if (window.location.pathname == "/UserManage.aspx" || window.location.pathname == "/Reply.aspx")
                        window.location.href = "HomePage.aspx";
                },
                error: function () {
                    alert('注销失败!');
                },
                complete: function () {
                    
                }
            });
        };

        // 注册
        function Register() {

            var username = document.getElementById("registerPhone").value;
            var password = document.getElementById("registerPassword").value;
            var password2 = document.getElementById("registerPassword2").value;
            var identitycode = document.getElementById("identitycode").value;

            if (username == "")
            {
                alert('用户名不能为空');
                return;
            }
            if (password == "")
            {
                alert('密码不能为空');
                return;
            }
            if (password != password2)
            {
                alert('两次输入的密码必须相同');
                return;
            }
            if (identitycode == "")
            {
                alert('短信验证码不能为空');
                return;
            }

            $.ajax({
                type: 'POST',
                url: 'WebService.aspx',
                async: true,
                data: {
                    regis_username: username,
                    regis_password: password,
                    regis_idcode: identitycode
                },
                beforeSend: function () {
                    // 禁用按钮防止重复提交
                    $('#loading').show();
                    $("#registerBtn").attr({ disabled: "disabled" });
                },
                success: function (data) {
                    if (data == '-1')
                        alert('用户名已存在！');
                    else {
                        //    alert('登录成功');
                        $('#register').modal('hide');
                        alert('注册成功！');
                    }   
                },
                error: function () {
                    alert('注册失败!');
                },
                complete: function () {
                    $('#loading').hide();
                    $("#registerBtn").removeAttr("disabled");

                    // 清空表单
                    document.getElementById("registerPhone").value = "";
                    document.getElementById("registerPassword").value = "";
                    document.getElementById("registerPassword2").value = "";
                    document.getElementById("identitycode").value = "";
                }
            });
        };

    </script>

